{% extends 'base_front.html.twig' %}

{% block title %}Services index{% endblock %}
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('front_office/css/services.css') }}">
{% endblock %}

{% block department %}

    <h1>Services </h1>


    <table class="table">
        <thead>
            <tr>
                
                 <th style="background-color: blue; color: white;">Type</th>
      <th style="background-color: blue; color: white;">Description</th>
      <th style="background-color: blue; color: white;">Chef Service</th>
      <th style="background-color: blue; color: white;">Prix</th>
      <th style="background-color: blue; color: white;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
               
                <td>{{ service.type }}</td>
                <td>{{ service.description }}</td>
                <td>{{ service.ChefService}}</td>
                <td>{{ service.prix}}</td>
                <td>
                    <a href="{{ path('app_services_show', {'id': service.id}) }}">show</a>
                    <a href="{{ path('app_services_edit', {'id': service.id}) }}">edit</a>
                    <a href="{{ path('app_services_delete', {'id': service.id}) }}">Delete</a>
                    <a href="{{ path('app_hospitalisation_new', {'id': service.id}) }}">Hospitalisation</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     <a href="{{ path('app_services_new') }}">Create new</a>
{% endblock %}

