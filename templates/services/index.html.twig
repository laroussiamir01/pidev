{% extends 'base_front.html.twig' %}

{% block title %}Services index{% endblock %}


{% block department %}

    <h1>Services </h1>


    <table class="table">
        <thead>
            <tr>
                
                <th>Type</th>
                <th>Description</th>
                <th>Chef Service</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
               
                <td>{{ service.type }}</td>
                <td>{{ service.description }}</td>
                <td>{{ service.ChefService}}</td>
                <td>
                    <a href="{{ path('app_services_show', {'id': service.id}) }}">show</a>
                    <a href="{{ path('app_services_edit', {'id': service.id}) }}">edit</a>
                    <a href="{{ path('app_services_delete', {'id': service.id}) }}">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     <a href="{{ path('app_services_new') }}">Create new</a>
{% endblock %}

