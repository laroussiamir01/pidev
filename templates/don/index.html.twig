    <h1>Dons</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Montant</th>
                <th>event</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for don in dons %}
            <tr>
                <td>{{ don.id }}</td>
                <td>{{ don.nom }}</td>
                <td>{{ don.montant }}</td>
                 <td>{{ don.events }}</td>
                <td>
                    <a href="{{ path('app_don_show', {'id': don.id}) }}">show</a>
                    <a href="{{ path('app_don_edit', {'id': don.id}) }}">edit</a>
