{% extends 'base.html.twig' %}

{% block title %}Dons index{% endblock %}

{% block body %}
    <h1>Dons index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for don in dons %}
            <tr>
                <td>{{ don.id }}</td>
                <td>
                    <a href="{{ path('app_dons_show', {'id': don.id}) }}">show</a>
                    <a href="{{ path('app_dons_edit', {'id': don.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dons_new') }}">Create new</a>
{% endblock %}
