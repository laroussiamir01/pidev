{% extends 'front.html.twig' %}
{% block edit %}
<title>Operations</title>


    <h1>Operations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Lieu</th>
                <th>Equipe</th>
                <th>Description</th>
                <th>Image</th>
                
            </tr>
        </thead>
        <tbody>
        {% for operation in operations %}
            <tr>
                <td>{{ operation.id }}</td>
                <td>{{ operation.date }}</td>
                <td>{{ operation.lieu }}</td>
                <td>{{ operation.equipe }}</td>
                <td>{{ operation.description }}</td>
                <td>{{ operation.image }}</td>
               
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}