{% extends 'back.html.twig' %}
{% block edit %}
<title>Operation index</title>


    <h1>liste des operations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Lieu</th>
                <th>Equipe</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for operation in operations %}
            <tr>
                <td>{{ operation.id }}</td>
                <td>{{ operation.date }}</td>
                <td>{{ operation.lieu }}</td>
                <td>{{ operation.equipe }}</td>
                <td>{{ operation.description }}</td>
                <td>{{ operation.image }}</td>
                <td>
                    <a href="{{ path('app_operation_show', {'id': operation.id}) }}">show</a>
                    <a href="{{ path('app_operation_edit', {'id': operation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_operation_new') }}">Create new</a>
{% endblock %}
